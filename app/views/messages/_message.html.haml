.chat-main__message_list
  .chat-main__message_list_data
    .chat-main__massage_list_data_menber
      = message.user.name
    .chat-main__message_list_data_date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__message_list_form
    - if message.content.present?
      %p.chat-main__message_list_form_content
        = message.content
    = image_tag message.image.url, class: 'chat-main__message_list_form_image' if message.image.present?
